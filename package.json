{
  "name": "ts-eslint-prettier-jest-minimal",
  "version": "1.0.0",
  "description": "TypeScript template with ESLint, Prettier and Jest",
  "main": "lib/main.js",
  "scripts": {
    "prepare": "husky install",
    "start": "tsx watch src/main.ts",
    "start:prod": "node lib/main.js",
    "dev": "tsc --watch",
    "build": "npm run clean && tsc -b",
    "clean": "rm -rf lib coverage",
    "analyze": "npm run lint:fix && npm run compile",
    "compile": "tsc --noEmit",
    "compile:watch": "tsc --noEmit --watch",
    "compile:build": "tsc -b",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "lint-staged": "lint-staged",
    "lint-staged:debug": "lint-staged --debug",
    "format": "prettier --config .prettierrc '**/*.+(ts|tsx)'",
    "format:check": "prettier --config .prettierrc '**/*.+(ts|tsx)' --check",
    "format:fix": "prettier --config .prettierrc '**/*.+(ts|tsx)' --write",
    "test": "jest",
    "test:unit": "jest --testPathPatterns=unit",
    "test:integration": "jest --testPathPatterns=integration",
    "test:e2e": "jest --testPathPatterns=e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "validate": "npm run compile && npm run lint && npm run test",
    "upgrade": "ncu -i",
    "upgrade:all": "ncu -u"
  },
  "author": "Softwarecrafters.io",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/jest": "30.0.0",
    "@types/node": "24.10.1",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "8.48.1",
    "@typescript-eslint/parser": "8.48.1",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "husky": "9.1.7",
    "jest": "30.2.0",
    "lint-staged": "16.2.7",
    "mongodb-memory-server": "^11.0.1",
    "npm-check-updates": "19.1.2",
    "prettier": "3.7.4",
    "supertest": "^7.1.4",
    "ts-jest": "29.4.6",
    "tsx": "^4.21.0",
    "typescript": "5.9.3"
  },
  "lint-staged": {
    "*.+(ts|tsx)": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "mongodb": "^7.0.0",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0"
  }
}
